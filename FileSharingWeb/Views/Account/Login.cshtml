@model FileSharingWeb.ViewModels.LoginVM

@{
    ViewData["Title"] = "Login";
}



<div class="st-blog-wrap st-section">
    <div class="container">
        <h1>@lang["login"]</h1>


        <hr /><br>
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Login" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="@lang["login"]" class="btn btn-primary" />
                        <a asp-action="Index" asp-controller="Home" class="btn btn-info m-2">@lang["back_btn"]</a>

                    </div>
                </form>
            </div>

            <div class="col-md-6">
                <a asp-action="ExternalLogin" asp-route-provider="Facebook" class="btn btn-outline-info">Login With
                    Facebook</a>
            </div>
        </div>


    </div>
</div>


@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
