@{
    ViewData["Title"] = "Home Page";
}


<div class="container text-center">
    <div class="row justify-content-md-center">
        <h2>Search For Upload </h2> <br>



        @if (@TempData["search_empty"] != null)
        {
            <span class="text-danger">@TempData["search_empty"]</span>
        }


        <div class="col-md-8  ">
            <form asp-action="Search" asp-controller="Uploads">
                <div class="input-group input-group-lg m-3">
                    <input type="text" class="form-control" placeholder="File Name" name="term">
                    <button class="btn btn-outline-secondary" type="submit">Search</button>
                </div>

            </form>
        </div>

        <div class="col-md-12 ">
            <h2>Popular Uploads</h2>

            <div class="row row-cols-1 row-cols-md-3 g-4 m-3">
                @foreach (var item in ViewBag.popularDownloads)
                {
                    <div class="col">
                        <div class="card">
                            @if (item.ContentType.Contains("image"))
                            {
                                <img src="@item.uploadUrl" class="card-img-top home-card-img" alt="@item.FileName">
                            }
                            else
                            {

                                <img src="~/images/no image.jpg" class="card-img-top home-card-img" alt="@item.FileName">
                            }

                            <div class="card-body">
                                <h5 class="card-title">@item.FileName</h5>
                                <p class="card-text">
                                    <strong>Download Count : </strong>
                                    @item.DownloadCount
                                </p>
                            </div>
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
</div>