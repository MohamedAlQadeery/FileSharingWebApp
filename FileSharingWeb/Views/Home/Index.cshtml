@{
    ViewData["Title"] = "Home Page";
}


<div class="container text-center">
    <div class="row justify-content-md-center">
        <h2>Search For Upload </h2> <br>



        @if (@TempData["search_empty"] != null)
        {
            <span class="text-danger">@TempData["search_empty"]</span>
        }


        <div class="col-md-8  ">
            <form asp-action="Search" asp-controller="Uploads">
                <div class="input-group input-group-lg m-3">
                    <input type="text" class="form-control" placeholder="File Name" name="term">
                    <button class="btn btn-outline-secondary" type="submit">Search</button>
                </div>

            </form>
        </div>
    </div>
</div>