@model FileSharingWeb.ViewModels.FileInputVM

@{
    ViewData["Title"] = "Create";
}


<!-- Start Page Title -->
<section class="st-page-header st-gray-bg ">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="st-page-header-text">
                    <h1>Upload a File</h1>
                    <ul class="st-breadcam">
                        <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li>Upload a file</li>
                    </ul>
                </div>
            </div><!-- .col -->
        </div>
    </div>
</section>
<!-- End Page Title -->


<!-- Start Search Section -->
<div class="st-blog-wrap st-section" id="blog">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="File" class="control-label" style="font-size: 18px;font-weight: bold;"></label>
                        <input asp-for="File" class="form-control" type="file" />
                        <span asp-validation-for="File" class="text-danger"></span>
                    </div>
                    <div class="form-group">

                        <input type="submit" value="Upload" class="btn btn-primary" />

                        <a asp-action="Index" class="btn btn-info">Back to List</a>

                    </div>
                </form>
            </div>
        </div>


    </div>
</div>
<!-- End Browse Section -->




@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
