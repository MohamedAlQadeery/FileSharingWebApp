@model FileSharingWeb.ViewModels.FileInputVM

@{
    ViewData["Title"] = "Create";
}


<!-- Start Page Title -->
<section class="st-page-header st-gray-bg ">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <div class="st-page-header-text">
                    <h1>Upload a File</h1>
                    <ul class="st-breadcam">
                        <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li>Upload a file</li>
                    </ul>

                    @if (TempData["uploaded_success"] != null)
                    {
                        <div class="alert alert-success m-4" role="alert">
                            <span class="success-message"> @TempData["uploaded_success"]</span>
                        </div>

                    }
                </div>
            </div><!-- .col -->
        </div>
    </div>
</section>
<!-- End Page Title -->


<!-- Start Create Section -->
<div class="st-blog-wrap st-section" id="blog">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="File" class="control-label" style="font-size: 18px;font-weight: bold;"></label>
                        <input asp-for="File" id="file-input" class="form-control" type="file" />
                        <span asp-validation-for="File" class="text-danger"></span>
                    </div>
                    <div class="form-group">

                        <input type="submit" value="Upload" id="uploadButton" class="btn btn-primary"
                            onclick="DisableButton()" />


                        <a asp-action="Index" class="btn btn-info">Back to List</a>

                    </div>
                </form>
            </div>
        </div>


    </div>
</div>
<!-- End Create Section -->




@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    //disabled button while uploading
    function DisableButton() {
        let file = $("#file-input")[0].files[0];
        if (file != undefined) {
            $("#uploadButton").addClass("disabled");

        }
    }
</script>
}
